{
  "manifest_version": 3,
  "name": "Easy Scrape",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "popup.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
